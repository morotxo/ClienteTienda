<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tienda?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1234</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">jta</property>
    <mapping resource="Pojos/Cliente.hbm.xml"/>
    <mapping resource="Pojos/Categoria.hbm.xml"/>
    <mapping resource="Pojos/Factura.hbm.xml"/>
    <mapping resource="Pojos/Detalle.hbm.xml"/>
    <mapping resource="Pojos/Pedido.hbm.xml"/>
    <mapping resource="Pojos/Imagen.hbm.xml"/>
    <mapping resource="Pojos/Administrador.hbm.xml"/>
    <mapping resource="Pojos/Producto.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
